{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Compass Manifest",
  "description": "Global project status and configuration. The brain of the Project Compass system.",
  "type": "object",
  "required": ["version", "last_updated", "active_handoff"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Compass schema version"
    },
    "last_updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} \\(KST\\)$",
      "description": "Last update timestamp in format: YYYY-MM-DD HH:MM (KST)"
    },
    "active_handoff": {
      "type": "string",
      "description": "Filename of the latest handoff in history/handoffs/"
    },
    "uv_constraints": {
      "type": "object",
      "properties": {
        "min_version": {
          "type": "string"
        },
        "required_path": {
          "type": "string"
        }
      }
    },
    "project_status": {
      "type": "object",
      "properties": {
        "current_phase": {
          "type": "string",
          "enum": ["detection", "recognition", "kie", "integration"]
        },
        "overall_health": {
          "type": "string",
          "enum": ["healthy", "degraded", "blocked"]
        }
      }
    }
  }
}
