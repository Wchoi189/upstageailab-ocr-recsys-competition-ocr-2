{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ADS v1.0 Validation Rules",
  "description": "JSON Schema for AI Documentation Standard v1.0",
  "type": "object",
  "required": [
    "ads_version",
    "type",
    "agent",
    "tier",
    "priority"
  ],
  "properties": {
    "ads_version": {
      "type": "string",
      "const": "1.0",
      "description": "Must be exactly '1.0'"
    },
    "type": {
      "type": "string",
      "enum": [
        "schema_specification",
        "agent_configuration",
        "tool_catalog",
        "rule_set",
        "quick_reference",
        "workflow_definition",
        "validation_script"
      ]
    },
    "agent": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["claude", "copilot", "cursor", "gemini", "qwen", "all"]
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["claude", "copilot", "cursor", "gemini", "qwen", "all"]
          },
          "minItems": 1
        }
      ]
    },
    "tier": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"]
    },
    "validates_with": {
      "type": "string",
      "description": "Path to validation script"
    },
    "compliance_status": {
      "type": "string",
      "enum": ["pass", "fail", "unknown"]
    },
    "memory_footprint": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated token count"
    },
    "date": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "draft"]
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}
