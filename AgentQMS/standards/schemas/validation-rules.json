{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ADS v1.0 Validation Rules",
  "description": "JSON Schema for AI Documentation Standard v1.0 with Dual Profiles",
  "type": "object",
  "definitions": {
    "system_profile": {
      "type": "object",
      "required": [
        "ads_version",
        "type",
        "agent",
        "tier",
        "priority"
      ],
      "properties": {
        "ads_version": {
          "const": "1.0"
        },
        "type": {
          "enum": [
            "schema_specification",
            "agent_configuration",
            "tool_catalog",
            "rule_set",
            "quick_reference",
            "workflow_definition",
            "validation_script",
            "entrypoint",
            "specification",
            "standard"
          ]
        },
        "agent": {
          "oneOf": [
            {
              "enum": [
                "claude",
                "copilot",
                "cursor",
                "gemini",
                "qwen",
                "all"
              ]
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "tier": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4
        },
        "priority": {
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        },
        "date": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "project_profile": {
      "type": "object",
      "required": [
        "ads_version",
        "type",
        "title",
        "date",
        "status",
        "version"
      ],
      "properties": {
        "ads_version": {
          "const": "1.0"
        },
        "type": {
          "enum": [
            "implementation_plan",
            "assessment",
            "audit",
            "design_document",
            "bug_report",
            "walkthrough",
            "vlm_report",
            "completed_plan",
            "guide"
          ]
        },
        "title": {
          "type": "string",
          "minLength": 5
        },
        "date": {
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2} \\(KST\\)$"
        },
        "status": {
          "enum": [
            "active",
            "draft",
            "completed",
            "archived",
            "deprecated"
          ]
        },
        "version": {
          "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
        },
        "category": {
          "enum": [
            "development",
            "architecture",
            "evaluation",
            "compliance",
            "code_quality",
            "reference",
            "planning",
            "research",
            "troubleshooting"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  }
}
