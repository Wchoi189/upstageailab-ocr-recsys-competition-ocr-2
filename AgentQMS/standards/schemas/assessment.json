{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Assessment",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "branch": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_/-]+$",
            "description": "Git branch name where artifact was created"
        },
        "status": {
            "type": "string",
            "enum": ["draft", "in-progress", "completed"]
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["title", "author", "date", "branch", "status"]
}
