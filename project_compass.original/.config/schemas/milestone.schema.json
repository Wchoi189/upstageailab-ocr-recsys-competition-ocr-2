{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Roadmap Milestone",
  "description": "Strategic milestone definition for pipeline progress tracking.",
  "type": "object",
  "required": ["milestone_id", "status"],
  "properties": {
    "milestone_id": {
      "type": "string",
      "description": "Unique identifier (e.g., 01_detection)"
    },
    "status": {
      "type": "string",
      "enum": ["not_started", "in_progress", "completed", "blocked"],
      "description": "Current milestone status"
    },
    "last_successful_exp": {
      "type": "string",
      "description": "Date-formatted experiment ID of last successful run"
    },
    "target_metrics": {
      "type": "object",
      "properties": {
        "accuracy": {
          "type": "number"
        },
        "f1_score": {
          "type": "number"
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Brief indicator-only notes (max 100 tokens)"
    }
  }
}
