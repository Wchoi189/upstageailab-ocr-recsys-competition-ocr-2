{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Experiment Manifest",
    "description": "The single source of truth for an OCR experiment state. Updated for EDS v1.1 to support sub-types and reconciliation.",
    "type": "object",
    "required": [
        "experiment_id",
        "name",
        "status",
        "created_at",
        "tasks"
    ],
    "properties": {
        "experiment_id": {
            "type": "string",
            "pattern": "^[0-9]{8}_[0-9]{6}_[a-z0-9_]+$"
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "status": {
            "type": "string",
            "enum": [
                "active",
                "complete",
                "paused",
                "deprecated"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "last_reconciled": {
            "type": "string",
            "format": "date-time"
        },
        "intention": {
            "type": "string",
            "minLength": 10
        },
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "description",
                    "status"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^task_[0-9]{3}$"
                    },
                    "description": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "backlog",
                            "in_progress",
                            "done"
                        ]
                    },
                    "completed_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "insights": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "insight",
                            "decision",
                            "failure"
                        ]
                    },
                    "content": {
                        "type": "string",
                        "minLength": 5
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "required": [
                    "type",
                    "content",
                    "timestamp"
                ]
            }
        },
        "artifacts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "path": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "assessment",
                            "guide",
                            "report",
                            "script"
                        ]
                    },
                    "subtype": {
                        "type": "string",
                        "enum": [
                            "performance",
                            "handoff",
                            "roadmap",
                            "compliance",
                            "baseline"
                        ],
                        "description": "Used to relax field requirements for non-metric reports."
                    },
                    "metadata": {
                        "type": "object"
                    }
                },
                "required": [
                    "path",
                    "type"
                ]
            }
        }
    }
}
