# OCR Sample Container - Environment Configuration
# Copy to .env and customize as needed

# Container Settings
CONTAINER_NAME=ocr-sample-data
CONTAINER_PORT=8000
HOST_PORT=8001
IMAGE_NAME=ocr-sample
IMAGE_TAG=latest

# Data Paths
OCR_DATA_PATH=/app/data
OCR_CONFIG_PATH=/app/config
OCR_DOCS_PATH=/app/docs
OCR_SCRIPTS_PATH=/app/scripts

# Python Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Network
NETWORK_NAME=ocr-network
NETWORK_DRIVER=bridge

# Restart Policy
RESTART_POLICY=unless-stopped

# Resource Limits (optional)
# MEMORY_LIMIT=512m
# CPUS_LIMIT=1.0

# Registry (for push/pull)
REGISTRY=docker.io
REGISTRY_USERNAME=your-username
REGISTRY_TOKEN=your-token

# Development
DEBUG=false
DEV_MODE=false
