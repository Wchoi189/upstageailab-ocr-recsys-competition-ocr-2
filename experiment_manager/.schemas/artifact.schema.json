{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Artifact",
    "type": "object",
    "required": [
        "path",
        "type",
        "timestamp"
    ],
    "properties": {
        "path": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "assessment",
                "report",
                "guide",
                "script",
                "other"
            ]
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    }
}
