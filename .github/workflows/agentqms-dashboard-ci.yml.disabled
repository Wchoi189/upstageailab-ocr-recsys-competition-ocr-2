name: AgentQMS Dashboard CI

on:
  pull_request:
    paths:
      - 'apps/agentqms-dashboard/**'
      - '.github/workflows/agentqms-dashboard-ci.yml'
  push:
    branches:
      - main
      - feature/agentqms-dashboard-integration
    paths:
      - 'apps/agentqms-dashboard/**'

permissions:
  contents: read

jobs:
  backend-test:
    name: Backend Tests
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r apps/agentqms-dashboard/backend/requirements.txt

      - name: Syntax Check
        run: |
          python -m compileall apps/agentqms-dashboard/backend/

  frontend-build:
    name: Frontend Build
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install dependencies
        working-directory: apps/agentqms-dashboard/frontend
        run: npm ci || npm install

      - name: Build
        working-directory: apps/agentqms-dashboard/frontend
        run: npm run build --if-present
