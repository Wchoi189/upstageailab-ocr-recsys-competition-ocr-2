{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for experiment incident report files",
  "properties": {
    "title": {
      "type": "string",
      "description": "Incident report title"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} \\(KST\\)$",
      "description": "Date and time in format: YYYY-MM-DD HH:MM (KST) (required for rapid development tracking)"
    },
    "timestamp": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} \\(KST\\)$",
      "description": "Timestamp in format: YYYY-MM-DD HH:MM (KST) (alternative to date field)"
    },
    "experiment_id": {
      "type": "string",
      "description": "ID of the experiment this incident report belongs to"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Severity level of the incident"
    },
    "status": {
      "type": "string",
      "enum": ["open", "investigating", "resolved", "closed"],
      "description": "Current status of the incident"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorizing the incident"
    },
    "author": {
      "type": "string",
      "description": "Author of the incident report"
    }
  },
  "required": ["title", "date", "experiment_id"],
  "additionalProperties": true
}

