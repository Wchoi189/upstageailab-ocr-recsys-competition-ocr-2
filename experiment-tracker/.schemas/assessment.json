{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for experiment assessment files",
  "properties": {
    "title": {
      "type": "string",
      "description": "Assessment title"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} \\(KST\\)$",
      "description": "Date and time in format: YYYY-MM-DD HH:MM (KST) (required for rapid development tracking)"
    },
    "timestamp": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} \\(KST\\)$",
      "description": "Timestamp in format: YYYY-MM-DD HH:MM (KST) (alternative to date field)"
    },
    "status": {
      "type": "string",
      "description": "Assessment status"
    },
    "author": {
      "type": "string",
      "description": "Author of the assessment"
    }
  },
  "required": ["title", "date"],
  "additionalProperties": true
}

