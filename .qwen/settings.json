{
  "general": {
    "checkpointing": {
      "enabled": true
    }
  },
  "ui": {
    "showMemoryUsage": true
  },
  "telemetry": {
    "enabled": false
  },
  "tools": {
    "approvalMode": "yolo"
  },
  "context": {
    "fileFiltering": {
      "respectGitIgnore": true,
      "respectQwenIgnore": true,
      "context_aware_loading": true,
      "includePatterns": [
        "**/pyproject.toml",
        "**/AGENTS.yaml",
        "**/README.md",
        "**/AgentQMS/.agentqms/plugins/context_bundles/*.yaml"
      ],
      "excludePatterns": [
        "**/node_modules/**",
        "**/.git/**",
        "**/logs/**",
        "**/outputs/**",
        "**/data/**",
        "**/archive/**",
        "**/_*/**"
      ]
    },
    "includeDirectories": [],
    "loadMemoryFromIncludeDirectories": false,
    "discoveryMaxDirs": 15,
    "importFormat": "tree"
  },
  "model": {
    "name": "qwen/qwen3-coder"
  },
  "$version": 2,
  "mcpServers": {
    "unified_project": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/workspaces/upstageailab-ocr-recsys-competition-ocr-2",
        "python",
        "scripts/mcp/unified_server.py"
      ]
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "-y",
        "perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  }
}
