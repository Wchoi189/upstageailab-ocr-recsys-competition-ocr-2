{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Assessment",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "timestamp": {
            "type": "string",
            "description": "Timestamp with hour and minute in KST format (YYYY-MM-DD HH:MM KST)"
        },
        "status": {
            "type": "string",
            "enum": ["draft", "in-progress", "completed"]
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["title", "author", "date", "timestamp", "status"]
}
