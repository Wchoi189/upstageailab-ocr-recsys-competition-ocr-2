#!/bin/bash
# AgentQMS Unified CLI Entrypoint
# Single source of truth for AgentQMS commands

set -e

# Resolve absolute path of the script, handling symlinks
if command -v readlink >/dev/null 2>&1; then
    SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
else
    SCRIPT_PATH="${BASH_SOURCE[0]}"
fi
SCRIPT_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

# Ensure we're using project venv
export PYTHONPATH="$PROJECT_ROOT:$PYTHONPATH"

# Route to Python CLI implementation (the actual tool)
exec uv run python -m AgentQMS.cli "$@"
